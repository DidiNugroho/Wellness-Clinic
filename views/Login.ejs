  <!-- navbar end -->
<body>
  <!-- register start -->
  <section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                  <p class="text-center text-danger-emphasis h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>
                  <% if (error) { %>
                    <div class="alert alert-danger ms-4" role="alert">
                        <%= error %>
                      </div>
                  <% } %>
                  <form action="/login" method="post" class="mx-1 mx-md-4">
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input type="email" id="email" class="form-control" name="email" />
                        <label class="form-label fw-semibold" for="email">Your Email</label>
                      </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input type="password" id="password" class="form-control" name="password" />
                        <label class="form-label fw-semibold" for="password">Password</label>
                      </div>
                    </div>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <button  type="submit" class="btn btn-primary btn-lg">Login Now!</button>
                    </div>
                    <p class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">Don't have an account?<a href="/register" style="text-decoration: none;">Register now.</a></p>
                </form>
            </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
  
                  <img src="https://media.istockphoto.com/id/1281150061/id/vektor/daftar-akun-kirimkan-akses-login-password-username-internet-online-situs-web-konsep-vektor.jpg?s=612x612&w=0&k=20&c=eb9xHZN7_UyP9jJTLL4bc0OvYDFdkERf5RTBtIY6_0w="
                    class="img-fluid" alt="Sample image">
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- register end -->
  
  </body>