<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Profiles</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container mt-4">
        <h1 class="mb-4">Patients List</h1>
        <form method="get">
            <input type="text" name="search" id="">
            <button type="submit">Search</button>
        </form><br>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Illness</th>
                    <th>Category</th>
                    <th>Registered</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Row, replace with your dynamic data -->
                <% patients.forEach(patient => { %>
                    <tr>
                    <td><%= patient.Profile.name %></td>
                    <td><%= patient.Profile.gender %></td>
                    <td><%= patient.Illnesses[0].name %></td>
                    <td><%= patient.Illnesses[0].Category.name %></td>
                    <td><%= patient.formattedCreatedAt %></td>
                        <td><a href="/patients/<%= patient.id %>/delete"><button>Delete</button></a></td>
                    </tr>
                <% }) %>
                <!-- Repeat for each doctor -->
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
